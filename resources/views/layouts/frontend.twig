								<li> <a href="{{ route('faq') }}">FAQ &nbsp; &nbsp;  </a> </li>
								<li> <a href="{{ route('docs') }}">Documentación &nbsp; &nbsp;  </a> </li>
								<li> <a href="http://blog.pixel.hn">Noticias  </a> </li>
							</ul>
						</div>

						<div class="bar__module">
							{% if not Auth.check() %}
								<a href="{{ route('register') }}" class="btn btn--sm type--uppercase">
									<span class="btn__text">{{ trans('frontend.register') }}</span>
								</a>
								<a href="{{ route('login') }}" class="btn btn--sm btn--primary type--uppercase">
									<span class="btn__text">{{ trans('frontend.login') }}</span>
								</a>
							{% else %}
								<a href="{{ route('dashboard') }}" class="btn btn--sm type--uppercase">
									<span class="btn__text">{{ 'pixel.menu.dashboard'|trans }}</span>
								</a>
							{% endif %}
						</div>
					</div>
				</div>
			</div>
