	<div class="nav-container ">
		<div class="bar bar--sm visible-xs visible-sm" style="position: absolute; width:100%; z-index:999">
			<div class="container">
				<div class="row">
					<div class="col-xs-12 col-sm-12 text-right">
						<a href="#" class="hamburger-toggle" data-toggle-class="#menu-main;hidden-xs hidden-sm">
							<span class="menu-label">MENU</span> <i class="icon icon--sm stack-interface stack-menu" style="color: #CCC"></i>
						</a>
					</div>
				</div>
			</div>
		</div>

		<nav id="menu-main" class="bar bar--sm bar-1 hidden-xs hidden-sm bar--absolute bar--transparent" data-scroll-class="150px:pos-fixed">
			<div class="container">
				<div class="row">
					<div class="col-md-1 col-sm-2 hidden-xs hidden-sm">
						<div class="bar__module">
							<a href="{{ route('home') }}" class="hash-link">
								<img class="logo logo-dark" alt="logo" width="125" height="25" src="{{ 'images/logo_frontend.png'|asset }}" />
								<img class="logo logo-light" alt="logo" width="125" height="25" src="{{ 'images/logo_frontend_white.png'|asset }}" />
							</a>
						</div>
					</div>
					<div class="col-md-11 col-sm-12 text-right text-left-xs text-left-sm">
						<div class="bar__module">
							<ul class="menu-horizontal text-left">
