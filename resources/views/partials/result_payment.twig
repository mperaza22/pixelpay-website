<script>
	$(function() {
		Pixel.setSize($('.pixel__modal-confirm'), 'small');

		var clipboard = new Clipboard('[copy-url]');

		clipboard.on('success', function(e) {
			Snackbar.show({ 
				text: '{{ "frontend.copy"|trans }}', 
				showAction: false,
				customClass: 'success',
			})
		});

		$('.pixel__modal-confirm .btn-no').click(function(event) {
			$(document).trigger('closeAllModals');
			location.reload();
		});
	});
</script>